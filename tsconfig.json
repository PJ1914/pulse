{
    "compilerOptions": {
      "target": "esnext",            // Target latest ECMAScript version
      "module": "esnext",            // Use ECMAScript module system
      "moduleResolution": "node",    // Node-style module resolution
      "jsx": "react-jsx",            // Use new JSX transform
      "esModuleInterop": true,       // Better interop with CommonJS modules
      "allowSyntheticDefaultImports": true, // Allows default imports from modules with no default export
      "resolveJsonModule": true,     // Allows importing JSON files
      "skipLibCheck": true,          // Skips type checking of declaration files
      "strict": true,                // Enable all strict type-checking options
      "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
      "noFallthroughCasesInSwitch": true,       // Report errors for fallthrough cases in switch statements
      "baseUrl": "./src",            // Base directory for non-relative module imports
      "paths": {
        "@/*": ["./*"]               // Path alias for clean imports
      },
      "lib": ["dom", "dom.iterable", "esnext"], // Include standard library files
      "types": ["node", "three"]     // Types for Node and Three.js
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/types/**/*.d.ts"          // Include type declarations
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }
  